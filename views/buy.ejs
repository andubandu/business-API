<!DOCTYPE html>
<html>
<head>
    <title>Buy Service - <%= service.title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        h2 {
            color: #666;
        }

        h3 {
            color: #888;
        }

        .service-details {
            background-color: #f9f9f9;
            padding: 15px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
        }

        .payment-section {
            padding: 15px;
            border: 2px solid #007bff;
            background-color: #f8f9fa;
        }

        .split-info {
            background-color: #e6f3ff;
            padding: 15px;
            border: 1px solid #b3d9ff;
            margin-bottom: 20px;
        }

        .split-breakdown {
            display: flex;
            gap: 20px;
            margin-top: 15px;
        }

        .split-item {
            flex: 1;
            text-align: center;
            padding: 15px;
            background: white;
            border: 1px solid #ddd;
        }

        .split-item .amount {
            font-size: 20px;
            font-weight: bold;
            color: #007bff;
        }

        .split-item .label {
            font-size: 12px;
            color: #666;
        }

        .developer-info {
            background-color: #fff3cd;
            padding: 10px;
            border: 1px solid #ffeaa7;
            margin: 10px 0;
        }

        .automatic-note {
            background-color: #d4edda;
            padding: 15px;
            border: 1px solid #c3e6cb;
            text-align: center;
            margin: 15px 0;
        }

        .price-display {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
            text-align: center;
            margin: 15px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
        }

        #paypal-button-container {
            margin-top: 15px;
        }
    </style>
    <script src="https://www.paypal.com/sdk/js?client-id=<%= paypal_client_id %>&currency=<%= service.currency %>"></script>
</head>
<body>
    <div class="container">
        <h1>Buy Service</h1>
        
        <div class="service-details">
            <h2><%= service.title %></h2>
            <p><%= service.description %></p>
            
            <div class="price-display">
                <%= service.price %> <%= service.currency %>
            </div>
            
            <div class="developer-info">
                <strong>Developer:</strong> <%= service.owner.real_name %> (@<%= service.owner.username %>)
            </div>
        </div>

        <div class="split-info">
            <h3>Payment Split</h3>
            <p><strong>Your payment will be split:</strong></p>
            <div class="split-breakdown">
                <div class="split-item">
                    <div class="amount"><%= (service.price * 0.9).toFixed(2) %> <%= service.currency %></div>
                    <div class="label">To Developer (90%)</div>
                </div>
                <div class="split-item">
                    <div class="amount"><%= (service.price * 0.1).toFixed(2) %> <%= service.currency %></div>
                    <div class="label">Platform Fee (10%)</div>
                </div>
            </div>
        </div>

        <div class="automatic-note">
            <strong>Secure Payment</strong><br>
            Your payment will be processed securely through PayPal.
        </div>
        
        <div class="payment-section">
            <h3>Pay Now</h3>
            <p>Click the button below to pay with PayPal.</p>
            <div id="paypal-button-container"></div>
        </div>
    </div>

    <script>
        paypal.Buttons({
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: '<%= service.price.toFixed(2) %>',
                            currency_code: '<%= service.currency %>'
                        },
                        description: '<%= service.title %>',
                        payee: {
                            email_address: '<%= service.owner.paypal_account.email %>'
                        }
                    }]
                });
            },
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    fetch('/payment/success', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + localStorage.getItem('token')
                        },
                        body: JSON.stringify({
                            serviceID: '<%= service._id %>',
                            paymentID: data.orderID,
                            amount: '<%= service.price %>',
                            currency: '<%= service.currency %>',
                            paypal_order_id: details.id
                        })
                    }).then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            alert('Payment error: ' + data.error);
                        } else {
                            alert('Payment successful! Developer gets: ' + data.developer_earnings + ' ' + data.currency);
                            window.location.href = '/services';
                        }
                    }).catch(error => {
                        alert('Payment successful!');
                        window.location.href = '/services';
                    });
                });
            },
            onError: function(err) {
                console.error('PayPal error:', err);
                alert('Payment failed. Please try again.');
            }
        }).render('#paypal-button-container');
    </script>
</body>
</html>